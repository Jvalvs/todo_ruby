<p id="notice"><%= notice %></p>

<h1>Todo Items</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Todo list</th>
      <th>Status</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.content %></td>
        <td><%= todo_item.todo_list_id %></td>
        <td><%= todo_item.status %></td>
        <td><%= todo_item.priority %></td>
        <td><%= link_to 'Edit', edit_todo_list_todo_item_path(@todo_list, todo_item) %></td>
        <td><%= button_to 'Destroy', todo_list_todo_item_path(@todo_list, todo_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo Item', new_todo_list_todo_item_path %>
