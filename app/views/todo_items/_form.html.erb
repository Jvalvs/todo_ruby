<%= form_with(model: [@todo_list, @todo_item]) do |form| %>
  <% if todo_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h2>

      <ul>
        <% todo_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <%= form.hidden_field :todo_list_id, value: @todo_list.id %>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ['A fazer', 'Em andamento', 'Concluído', 'Cancelado'] %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, ['Baixa', 'Média', 'Alta'] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
