
<div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h3 class="display-4 me-3">Criar conta</h3><br>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field mb-3">

    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Senha" %>
    <div id="passwordHelpBlock" class="form-text">
      Sua senha deve ter no minimo 6 caracteres
    </div>
  </div>

  <div class="field mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirmar senha" %>
  </div>

  <div class="actions mb-3">
    <%= f.submit "Criar conta", class:"btn btn-logout"%>
  </div>
<% end %>


